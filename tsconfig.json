{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "build",
		"rootDir": "src",
		"baseUrl": "src",
		"noEmit": true,
		"strict": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		"build",
		"node_modules"
	]
}
